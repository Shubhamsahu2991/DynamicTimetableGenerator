@model TimetableModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Generated Timetable";
}
<div class="card shadow-sm p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Generated Timetable</h4>
        <div>
            <a asp-action="ExportToExcel" class="btn btn-outline-success me-2">
                <i class="bi bi-file-earmark-excel"></i> Export to Excel
            </a>
            <a asp-action="ExportToPdf" class="btn btn-outline-danger">
                <i class="bi bi-file-earmark-pdf"></i> Export to PDF
            </a>
        </div>
    </div>

    <table class="table table-bordered table-hover text-center">
        <thead class="table-primary">
            <tr>
                @foreach (var day in Model.Days)
                {
                    <th>@day</th>
                }
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Timetable.GetLength(0); i++)
            {
                <tr>
                    @for (int j = 0; j < Model.Timetable.GetLength(1); j++)
                    {
                        <td>@Model.Timetable[i, j]</td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
